# manifest for package data
include README.md
include LICENSE
include CHANGELOG.md
include CODE_OF_CONDUCT.md
include CONTRIBUTING.md
include SECURITY.md
include SUPPORT.md

# include all python files
recursive-include neurova *.py

# include type stubs
recursive-include neurova *.pyi
include neurova/py.typed

# include data files
recursive-include neurova/data *

# include tflite models for solutions
recursive-include neurova *.tflite
recursive-include neurova/solutions/models *.tflite
recursive-include neurova/face *.tflite

# exclude test files and reports
recursive-exclude tests *
recursive-exclude examples *
exclude test_*.py
exclude *_test.py
exclude validate_*.py
exclude demo_*.py
exclude quick_test.py

# exclude build scripts and tools
exclude build_*.sh
exclude build_*.py
exclude setup_native.py
exclude check_*.py
exclude cleanup_files.py
exclude feature_audit.py

# exclude documentation (kept in repo only)
exclude ARCHITECTURE.md
exclude PUBLISHING.md
exclude PUBLISHING_STEPS.md
recursive-exclude docs *
exclude *_SUMMARY.md
exclude *_QUICKREF.md
exclude TASK_COMPLETION_REPORT.md
exclude CPP_MODULES_COMPLETE.md
exclude TIMESERIES_CPP_COMPLETE.md

# exclude build artifacts
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *.so
global-exclude *.dylib
global-exclude *~
global-exclude .DS_Store
global-exclude .coverage
global-exclude htmlcov

# exclude project-specific folders
recursive-exclude scripts *
exclude my_detection_dataset
exclude cmake
exclude src
exclude include
exclude proto
exclude htmlcov
exclude .pytest_cache

